/* Base CSS */
.alignleft {
    float: left;
    margin-right: 15px;
}
.alignright {
    float: right;
    margin-left: 15px;
}
.aligncenter {
    display: block;
    margin: 0 auto 15px;
}
a:focus { outline: 0 solid }
img {
    max-width: 100%;
    height: auto;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    margin: 0 0 15px;
    font-weight: 300;
}
body,a {
	font-family: 'Roboto', sans-serif;
	font-size:15px;
	line-height:1.7;
	color:#000;
	font-weight:300;
	text-decoration:none;
}
a:hover { text-decoration: none; }

