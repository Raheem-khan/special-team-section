.home-page-slides {
    background: #218ae6;
    color: #fff;
    font-size: 16px;
}
.home-page-slides h2 {
    font-size: 50px;
}
a.service-btn {
    background: #f9cf25;
    display: inline-block;
    padding: 8px 20px;
    font-size: 15px;
    border-radius: 5px;
    text-transform: uppercase;
    font-weight: 400;
}
.single-home-page-slide {
    padding: 150px 0;
}
.single-home-page-slide {
    padding: 150px 0;
}
.home-page-slides .owl-dots div {
    display: inline-block;
    height: 15px;
    width: 15px;
    background: #fff;
    border-radius: 50%;
     margin: 0 3px;
}
.home-page-slides .owl-dots {
    position: absolute;
    bottom: 20px;
    left: 50%;
 }
.home-page-slides .owl-dots div.active{
	background:#f9cf25;
}














